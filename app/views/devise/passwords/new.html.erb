

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 <div class="container"  style="text-align: center;">
      <div class="content px-5 py-4" style="border-radius: 20px;">
        <h2>Forgot your password?</h2>
         <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group mt-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions form-group mt-3">
    <%= f.submit "Reset password", class:'btn btn-secondary my-3'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div></div>
