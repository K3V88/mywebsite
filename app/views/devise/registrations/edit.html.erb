<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <div class="container"  style="text-align: center;">
    <div class="content px-5 py-4 mb-5" style="border-radius: 20px;">
      <h2>Edit User</h2>
      <%= render "devise/shared/error_messages", resource: resource %>
       <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, class: "user-image my-4", alt: "User Image" %>
          <% else %>
            <%= image_tag "default.jpg", class: "user-image my-4", alt: "User Image" %>
          <% end %>

      <!-- Avatar upload field -->
      <div class="field form-group my-4">
        <%= f.label :avatar, "Avatar" %><br />
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <!-- Email field -->
      <div class="field form-group my-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
        <div class="field form-group my-2">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
      </div>


      <!-- Password fields -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field form-group my-2">
        <%= f.label :password, "New Password" %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
        <% end %>
      </div>
      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <!-- Update button -->
      <div class="actions form-group my-2">
        <%= f.submit "Update", class: "btn btn-secondary form-control my-4" %>
      </div>
<% end %>

<div class="form-group mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    </div>

  </div>
